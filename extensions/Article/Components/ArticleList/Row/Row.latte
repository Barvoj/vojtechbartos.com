<div class="row">
    <div class="col-md-11">
        <a n:ifset="$showLink" href="{$showLink}" title="{_messages.article.show}" class="ajax">
            <span class="title">{$article->getTitle()|truncate:100}</span>
        </a>
        <span class="content">{$article->getContent()|truncate:300}</span>
    </div>
    <div class="col-md-1">
        {if $isPublished}
            <a n:ifset="$unPublishLink" href="{$unPublishLink}" title="{_messages.article.unPublish}"
                                        class="ajax unpublish" data-ajax-off="history">
                <i class="fa fa-eye-slash" aria-hidden="true"></i>
            </a>
        {else}
            <a n:ifset="$publishLink" href="{$publishLink}" title="{_messages.article.publish}" class="ajax publish"
                                      data-ajax-off="history">
                <i class="fa fa-eye" aria-hidden="true"></i>
            </a>
        {/if}
        <a n:ifset="$editLink" href="{$editLink}" title="{_messages.article.edit}" class="ajax edit">
            <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <a n:ifset="$deleteLink" href="{$deleteLink}" title="{_messages.article.delete}" class="ajax delete">
            <i class="fa fa-trash-o" aria-hidden="true"></i>
        </a>
    </div>
</div>



